<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.GoogleLogin" android:background="#CFCFCF">

    <ImageView
            android:id="@+id/btn_capture_photo"
            android:layout_width="313dp"
            android:layout_height="390dp"
            android:src="@drawable/white_rectangle"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:background="#ffffff"/>


    <EditText
            android:layout_height="37dp"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="378dp" android:id="@+id/PswGgl"
            android:layout_width="256.84dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:selectAllOnFocus="true" android:textColor="#727C8E"
            android:text="*****" android:textSize="12dp" tools:ignore="MissingConstraints"/>
    <EditText
            android:layout_width="256.84dp"
            android:layout_height="37dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/GglmailEdTxt" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toTopOf="@+id/PswGgl" android:text="fblogin@mail.com"
            android:textColor="#727C8E" android:textSize="12dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Continue"
            android:layout_width="194.44dp"
            android:layout_height="42.37dp"
            android:id="@+id/NextBtnGgl" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/PswGgl" app:layout_constraintHorizontal_bias="0.497"
            android:background="#FB8C8C" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.063"
            android:textColor="#ffffff"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@drawable/ggleicone"
            android:id="@+id/GglImgView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/GglmailEdTxt" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.78"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="12dp" app:srcCompat="@drawable/mailgi"
            tools:layout_editor_absoluteY="295dp"
            android:id="@+id/GglMailIV"
            tools:layout_editor_absoluteX="62dp" tools:ignore="MissingConstraints"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="12dp" app:srcCompat="@drawable/gglpswico"
            tools:layout_editor_absoluteY="386dp"
            tools:layout_editor_absoluteX="62dp" android:id="@+id/GglPswIV" tools:ignore="MissingConstraints"/>


</androidx.constraintlayout.widget.ConstraintLayout>
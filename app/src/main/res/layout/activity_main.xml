<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.MainActivity" android:id="@+id/LoginLayout" android:background="#F1F1F1">


    <Button
            android:text="Google"
            android:background="@drawable/mybuttons"
            android:layout_width="230.09dp"
            android:layout_height="38dp" tools:layout_editor_absoluteY="329dp"
            android:id="@+id/cnxBtn" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" tools:background="#F25E5E"
            tools:ignore="MissingConstraints" app:layout_constraintHorizontal_bias="0.496"
            android:fontFamily="sans-serif-smallcaps"/>
    <Button
            android:text="Facebook"
            android:background="@drawable/mybuttons"
            android:layout_width="230.09dp"
            android:layout_height="39.96dp"
            android:id="@+id/AnoBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/cnxBtn" tools:background="#7E86F6"
            android:fontFamily="sans-serif-smallcaps"/>
    <TextView
            android:text="Login With "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:fontFamily="sans-serif"
            android:textSize="23dp" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/cnxBtn" app:layout_constraintHorizontal_bias="0.498"
            android:textColor="#007481"/>
    <TextView
            android:layout_width="335dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/AnoBtn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.577"
            android:text="By creating an account you agree to our Terms of Service and Privacy Policy"
            android:textSize="14dp" android:textAlignment="center" android:textColor="#007481"
    />
    <ImageView
            android:layout_width="241dp"
            android:layout_height="119dp" app:srcCompat="@drawable/logo"
            android:id="@+id/imageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>